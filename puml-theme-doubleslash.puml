'Include this theme with:
'!include https://raw.githubusercontent.com/doubleSlashde/umltheme/main/puml-theme-doubleslash.puml
!$PUML_THEME = "doubleslash"
!$THEME      = "doubleslash"
!include doubleslash-colordefs.puml


'allowmixing 'if flag is set, different diagram types could mixed up
show circle 
hide empty members
hide stereotype

skinparam Shadowing false
skinparam Padding 2
skinparam Roundcorner 16
skinparam BackgroundColor white
skinparam DefaultFontName FONTNAME
skinparam DefaultTextAlignment center

' Title
'=================================================================
skinparam TitleFontSize 18
skinparam TitleFontName FONTNAME
skinparam TitleFontColor DS_DARKGREY

' Note 
'=================================================================
'skinparam NoteBackgroundColor TIPBGCOLOR
'skinparam NoteBorderColor TIPBORDERCOLOR
'skinparam NoteBorderThickness 0.3
'skinparam NoteShadowing true
skinparam NoteBackgroundColor transparent
skinparam NoteBorderColor transparent
skinparam NoteBorderThickness 0.0
skinparam NoteFontColor DS_GREY
skinparam NoteFontSize 11
skinparam NoteTextAlignment left


' Rectangle
'=================================================================
skinparam RectangleFontColor DS_GREY
skinparam RectangleBackgroundColor SUPERLIGHTGREY
skinparam RectangleBorderColor DS_DARKGREY
skinparam RectangleFontSize 14

' Package
'=================================================================
skinparam PackageFontColor DS_GREY
skinparam PackageBackgroundColor SUPERLIGHTGREY
skinparam PackageBorderColor DS_DARKGREY
skinparam PackageFontSize 14

' Arrow
'=================================================================
skinparam ArrowColor DS_GREY
skinparam ArrowThickness 1.5
skinparam ArrowFontName FONTNAME
skinparam ArrowFontColor DS_GREY
skinparam ArrowFontStyle normal


' Rectangle
'=================================================================
skinparam RectangleBorderThickness 0.5
skinparam RectangleBorderColor DS_GREY
skinparam RectangleBackgroundColor SUPERLIGHTGREY


' Actor
'=================================================================
skinparam ActorBorderColor DS_LIGHTGREY
skinparam ActorBackgroundColor DS_LIGHTGREY
skinparam ActorBorderThickness 3.5
skinparam ActorFontName FONTNAME


' Usecase
'=================================================================
skinparam UsecaseBackgroundColor DS_LIGHTBLUE
skinparam UsecaseBorderColor STEELBLUE40
skinparam UsecaseBorderThickness 1.5
skinparam UsecaseBackgroundColor<<External>> DS_LIGHTGREY
skinparam UsecaseBorderColor<<External>> DS_LIGHTGREY

' Class
'=================================================================
skinparam ClassBackgroundColor DS_LIGHTBLUE
skinparam ClassFontColor DS_DARKGREY
skinparam ClassFontSize 12
skinparam ClassBorderColor STEELBLUE40
skinparam ClassBorderThickness 1.5
skinparam ClassAttributeFontSize 12

' Activity
'=================================================================
skinparam ActivityStartColor DS_DARKGREY
skinparam ActivityEndColor DS_DARKGREY
skinparam ActivityFontColor DS_DARKGREY
skinparam ActivityBackgroundColor DS_LIGHTBLUE
skinparam ActivityBorderColor STEELBLUE40
skinparam ActivityBorderThickness 1.5
skinparam ActivityDiamondBorderColor DS_ORANGE
skinparam ActivityDiamondBackgroundColor DS_ORANGE
skinparam ActivityDiamondFontColor DS_GREY
skinparam ActivityDiamondFontName FONTNAME
skinparam conditionStyle diamond



' Sequence
'=================================================================
skinparam SequenceLifeLineBackgroundColor DS_LIGHTGREY
skinparam SequenceLifeLineBorderColor DS_LIGHTGREY
skinparam SequenceGroupBackgroundColor SUPERLIGHTGREY
skinparam SequenceReferenceBackgroundColor DS_LIGHTGREY

' Component
'=================================================================
skinparam ComponentBorderColor DS_BLUE 
skinparam ComponentBackgroundColor DS_LIGHTBLUE


