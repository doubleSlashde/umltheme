
!$PUML_THEME = "doubleslash"
!$THEME      = "doubleslash"
''Define colors in doubleSLash corporate identity


!define DS_BLUE           00A5E1
!define DS_LIGHTBLUE      D7E9F4
!define DS_ORANGE         FF9F00
!define DS_LIGHTGREY      C6C6C6
!define DS_GREY           7A7A7A
!define DS_DARKGREY       515151

!define SUPERLIGHTGREY    F2F2F2
!define STEELBLUE25       374656
!define STEELBLUE40       8A9DB3
!define BLACK50           7F7F7F
!define BLACK25           404040
!define NOTEBGCOLOR       FFF6E7
!define NOTEBORDERCOLOR   FFD999

!define FONTNAME          "Helvetica"

hide circle 
hide empty members

skinparam padding 8
skinparam roundcorner 16
skinparam NoteBackgroundColor #DS_LIGHTBLUE
skinparam NoteBorderColor #DS_LIGHTBLUE

skinparam FontName FONTNAME
skinparam defaultFontName FONTNAME
skinparam FontSize 14

skinparam ArrowColor #DS_GREY
skinparam ArrowThickness 1
skinparam ArrowFontName FONTNAME
skinparam ArrowFontColor #DS_GREY
skinparam ArrowFontStyle bold
skinparam Shadowing true
skinparam BorderColor #DS_LIGHTGREY
skinparam BorderThickness 2

skinparam stereotypeCBackgroundColor #C6C6C6

skinparam NoteBorderColor #NOTEBORDERCOLOR

skinparam title {
  FontName FONTNAME
  FontSize 12
}

skinparam package {
    AttributeFontColor #DS_GREY
    BackgroundColor #fbfbfb
    BorderColor #darkgrey
    FontSize 14
}

skinparam note {
  FontSize 12
  FontColor #DS_GREY
  BackgroundColor #NOTEBGCOLOR
  BorderThickness 0
}

skinparam class {
    BackgroundColor #DS_LIGHTBLUE
    FontColor #DS_DARKGREY
    HeaderFontSize 16
    BorderColor #STEELBLUE40
    BorderThickness 0
}

skinparam Sequence {
    ParticipantBorderColor #DS_LIGHTBLUE
    ParticipantBackgroundColor #DS_LIGHTBLUE
    LifeLineBorderColor #DS_LIGHTGREY
    LifeLineBackgroundColor #DS_LIGHTGREY
    GroupBackgroundColor #DS_LIGHTGREY
    ActorBorderColor #DS_BLUE
    ActorBackgroundColor #DS_BLUE
    ActorBorderThickness 2.5
    ReferenceHeaderBackgroundColor #DS_LIGHTGREY
}

<style>
activityDiagram {
  BackgroundColor #DS_LIGHTBLUE
  BorderColor #DS_LIGHTBLUE
  FontColor #DS_DARKGREY
  FontName FONTNAME
  StartColor #DS_LIGHTBLUE
  BarColor #DS_LIGHTBLUE
  EndColor #DS_GREY

  diamond {
    BackgroundColor #DS_ORANGE
    LineColor #DS_ORANGE
    FontColor #white
    FontName FONTNAME
  }
  arrow {
    FontName FONTNAME
    ArrowThickness 2
  }
  partition {
    LineColor #DS_DARKGREY
    FontColor #DS_DARKGREY
    RoundCorner 10
    BackgroundColor #SUPERLIGHTGREY
  }
}
document {
   BackgroundColor transparent
}
</style>

skinparam Usecase {
    BackgroundColor #DS_LIGHTBLUE
    BorderColor #DS_LIGHTBLUE
    ActorBorderColor #DS_LIGHTBLUE
    ActorFontName FONTNAME
    ActorBackgroundColor #DS_LIGHTBLUE
}

skinparam Interface {
  backgroundColor #DS_LIGHTGREY
  borderColor #DS_LIGHTGREY
}

skinparam Component {
  BorderColor #DS_LIGHTBLUE
  BackgroundColor #DS_LIGHTBLUE
}


