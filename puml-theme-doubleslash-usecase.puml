!include https://raw.githubusercontent.com/doubleSlashde/umltheme/main/puml-theme-doubleslash-general.puml

hide stereotypes
skinparam padding 2
left to right direction

' Actor
'=================================================================
skinparam ActorBorderColor DS_LIGHTGREY
skinparam ActorBackgroundColor DS_LIGHTGREY
skinparam ActorBorderThickness 5.0
skinparam ActorFontName FONTNAME


' Usecase
'=================================================================
skinparam UsecaseBackgroundColor DS_LIGHTBLUE
skinparam UsecaseBorderColor DS_BLUE
skinparam UsecaseBorderThickness 0.0
skinparam UseCaseFontName FONTNAME

skinparam UsecaseBackgroundColor<<External>> DS_LIGHTGREY
skinparam UsecaseBorderColor<<External>> DS_LIGHTGREY

' Rectangle for system boundary
'=================================================================
skinparam RectangleBackgroundColor ALICEBLUE
skinparam RectangleBorderThickness 0.0
skinparam RectangleBorderStyle solid
