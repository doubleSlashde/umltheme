!include https://raw.githubusercontent.com/doubleSlashde/umltheme/main/puml-theme-doubleslash-general.puml

'saturday are closed
'sunday are closed
'language de

skinparam Roundcorner 6

saturday are colored in SUPERLIGHTGREY
sunday are colored in SUPERLIGHTGREY
printscale weekly zoom 4

<style>
ganttDiagram {
  task {
    FontName FONTNAME
    FontSize 12
    FontColor DS_DARKGREY
    FontStyle normal
    BackGroundColor DS_LIGHTBLUE
    LineColor DS_LIGHTBLUE
    Padding 3
   }

  timeline {
    FontName FONTNAME
    BackgroundColor SUPERLIGHTGREY
  }

  milestone {
    FontColor black
    FontSize 12
    FontStyle normal
    BackGroundColor DS_BLUE
    LineColor DS_BLUE
    LineThickness 5.0
    Margin 4
  }

  note {
    FontColor black
    FontSize 10
    LineColor DS_LIGHTGREY
  }
	
  closed {
    BackgroundColor SUPERLIGHTGREY
    FontColor DS_DARKGREY
  }

  Arrow {
    LineColor DS_GREY
    LineStyle solid
    LineThickness 1.5
    FontName FONTNAME
    FontColor DS_DARKGREY
    FontSize 12
  }

  Separator {
    LineStyle 8.0;13.0
    LineColor black
    LineThickness 1.5

    FontSize 14
    FontStyle bold
    FontColor DS_DARKGREY
    Margin 5
    Padding 5
  }
}
</style>
